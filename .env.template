# BrinChat Environment Configuration Template
# Copy to .env and fill in your values

# === Core Settings ===
OPENCLAW_API_URL=http://127.0.0.1:18789/v1
OPENCLAW_API_KEY=your_api_key_here
CLAUDE_MODEL=openclaw:main
OPENCLAW_PRIMARY_USER_ID=0
OPENCLAW_PRIMARY_USERNAME=
OPENCLAW_MAIN_SESSION_KEY=agent:main:main

# === Database ===
DATABASE_PATH=./peanutchat.db

# === Authentication ===
JWT_SECRET=generate_random_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=43200
COOKIE_SECURE=false

# === Voice Settings ===
VOICE_ENABLED=false

# TTS (Text-to-Speech)
# Backends: openai (OpenAI-compatible), edge (Microsoft Edge), piper, coqui, kokoro
TTS_BACKEND=openai
TTS_MODEL=http://10.10.10.124:5002    # Model path or URL
TTS_DEVICE=cuda                        # cuda or cpu
OPENAI_TTS_BASE_URL=http://10.10.10.124:5002/v1  # For OpenAI-compatible endpoints

# STT (Speech-to-Text)
# Backends: openai (OpenAI-compatible), whisper, faster_whisper, vosk
STT_BACKEND=openai
STT_MODEL=http://10.10.10.124:5001    # Model path or URL
STT_DEVICE=cuda                        # cuda or cpu
OPENAI_STT_BASE_URL=http://10.10.10.124:5001/v1  # For OpenAI-compatible endpoints

# Voice limits
VOICE_MAX_TTS_LENGTH=1000
VOICE_MAX_AUDIO_LENGTH=300

# === Ollama ===
OLLAMA_BASE_URL=http://10.10.10.124:11434

# === Knowledge Base ===
KB_EMBEDDING_MODEL=nomic-embed-text
KB_CHUNK_SIZE=1000
KB_CHUNK_OVERLAP=200

# === Image Generation ===
IMAGE_BACKEND=comfyui                 # comfyui or gradio
COMFYUI_API_URL=http://10.10.10.124:3457

# === Optional Services ===
BRAVE_SEARCH_API_KEY=                 # For web search
HF_TOKEN=                             # For video generation

# === Server Settings ===
APP_HOST=0.0.0.0
APP_PORT=8081
CORS_ORIGINS=http://localhost:8081,http://10.10.10.200:8081
TRUSTED_PROXIES=10.10.10.120

# === Advanced ===
THINKING_TOKEN_LIMIT_INITIAL=3000
THINKING_TOKEN_LIMIT_FOLLOWUP=2000
THINKING_HARD_LIMIT_INITIAL=30000
THINKING_HARD_LIMIT_FOLLOWUP=20000
CHAT_REQUEST_TIMEOUT=300
LOG_LEVEL=INFO
